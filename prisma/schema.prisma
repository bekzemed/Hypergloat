// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  EDITOR
  ADMIN
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  name      String
  password  String
  role      Role      @default(EDITOR)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Article   Article[]
}

model Article {
  id          Int      @id @default(autoincrement())
  title       String   @unique
  description String
  content     String   @db.Text
  coverImage  String
  author      User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      Int
}

model Portifolio {
  id                 Int      @id @default(autoincrement())
  projectName        String
  projectCategory    String
  projectTags        String[]
  projectDescription String   @db.Text
  testimonies        String[]
  coverImage         String
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Contact {
  id        Int      @id @default(autoincrement())
  email     String
  name      String
  message   String
  subject   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model TeamMember {
  id        Int      @id @default(autoincrement())
  name      String
  position  String
  image     String
  bio       String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Event {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  image       String
  location    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Career {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  requirments String[]
  location    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
